{
	"expo": {
		"name": "BinBuddy",
		"slug": "bin-buddy",
		"scheme": "aora",
		"version": "1.0.0",
		"orientation": "portrait",
		"icon": "./assets/images/icon.png",
		"userInterfaceStyle": "automatic",
		"splash": {
			"image": "./assets/images/splash.png",
			"resizeMode": "contain",
			"backgroundColor": "#ffffff"
		},
		"ios": {
			"supportsTablet": true
		},
		"android": {
			"adaptiveIcon": {
				"foregroundImage": "./assets/images/adaptive-icon.png",
				"backgroundColor": "#ffffff"
			}
		},
		"web": {
			"bundler": "metro",
			"output": "static",
			"favicon": "./assets/images/favicon.png"
		},
		"plugins": [
			"expo-router",
			[
				"expo-camera",
				{
					"cameraPermission": "Allow BinBuddy to access your camera",
					"microphonePermission": "Allow BinBuddy to access your microphone",
					"recordAudioAndroid": false
				}
			]
		],
		"experiments": {
			"typedRoutes": true
		}
	}
}
